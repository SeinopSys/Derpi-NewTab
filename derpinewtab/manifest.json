{
	"manifest_version": 2,
	
	"name": "Derpi-New Tab",
	"description": "A new tab page replacement featuring the latest pony wallpaper from Derpibooru",
	"version": "2.2.1",
	
	"applications": {
		"gecko": {
			"strict_min_version": "55.0"
		}
	},
	
	"permissions": [ "https://derpibooru.org/", "https://derpicdn.net/", "cookies" ],
	
	"optional_permissions": [ "https://www.derpibooru.org/", "https://trixiebooru.org/" ],
	
	"icons": {
		"16": "icons/16.png",
		"32": "icons/32.png",
		"48": "icons/48.png",
		"128": "icons/128.png",
		"256": "icons/256.png"
	},
	
	"chrome_url_overrides" : { "newtab": "index.html" }
}
